<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.device_edg">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:label="device_edg"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- O Service e o Receiver do background_fetch Headless -->
        <service 
            android:name="com.transistorsoft.flutter.backgroundfetch.HeadlessJobService" 
            android:permission="android.permission.BIND_JOB_SERVICE" 
            android:exported="true" />
        
        <receiver 
            android:name="com.transistorsoft.flutter.backgroundfetch.HeadlessBroadcastReceiver" 
            android:exported="true" />
        
        <!-- O BootReceiver com a correÃ§Ã£o tools:replace para resolver o conflito -->
        <receiver 
            android:name="com.transistorsoft.tsbackgroundfetch.BootReceiver" 
            android:exported="true" 
            tools:replace="android:exported"> 
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    
    <!-- O elemento <queries> deve estar dentro de <manifest> mas FORA de <application> -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>